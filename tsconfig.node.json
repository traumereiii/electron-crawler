{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*.ts",
    "src/main/**/*.spec.ts",
    "src/preload/**/*",
    "src/lib/*",
    "src/types/*",
    "src/global.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["electron-vite/node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@preload/*": [
        "src/preload/*"
      ]
    }
  }
}
